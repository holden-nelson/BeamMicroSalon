---
import "../styles/global.css";

import Navbar from "../components/navbar.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Beam Micro Salon</title>
  </head>
  <body>
    <div class="bg-beam-500 w-screen flex flex-col justify-start items-center">
      <Navbar />
      <header class="relative w-7xl" id="starfield">
        <div class="w-full h-full flex flex-col justify-start items-center">
          <div class="mt-4 border-solid border-beam-900 border-t-6 border-b-6">
            <h1 class="text-beam-900 text-9xl font-limelight">
              Beam Micro Salon
            </h1>
          </div>
          <div class="w-full flex flex-row justify-end">
            <div class="w-[450px] h-[700px] bg-beam-700 mt-8 mr-16 mb-8">
              <!-- I will be a picture one day -->
            </div>
          </div>
        </div>
      </header>
    </div>
  </body>
  <script src="scripts/starfield.js" type="module"></script>
</html>
